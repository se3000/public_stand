#wysihtml5-toolbar {
  margin-top: -16px;
  margin-bottom: 20px;

  a {
    width: 30px;
    height: 30px;
    display: inline-block;
  }
  .bold {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) 0px 0px;
  }
  .italic {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -68px 0px;
  }
  .link {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -295px 0px;
  }
  .h1 {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -365px 2px;
  }
  .h2 {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -450px 0px;
  }
  .unordered-list {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -135px 0px;
  }
  .ordered-list {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -220px 0px;
  }
  .html {
    background: url(<%= asset_path('wysihtml5-icons.png') %>) -685px 0px;
  }
}
