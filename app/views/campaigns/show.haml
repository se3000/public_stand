= content_for(:custom_head) do
  %meta{property: 'og:title', content: @campaign.name}
  %meta{property: 'og:description', content: @campaign.description}
.row
  .columns.large-12
    %h1.center= @campaign.name
    - if can? :manage, @campaign
      .right
        = link_to 'Edit Campaign', edit_organization_campaign_path(@organization, @campaign)
        /%div /= link_to 'Edit Image', edit_picture_path(@picture)
  .columns.small-12.large-7
    .image-bar
      = image_tag "http://media.npr.org/assets/img/2014/02/12/NIF_wide-363b27a25b03804d468852d491e240a7f36ad055-s40-c85.jpg"
  .columns.small-12.large-5
    - @campaign.campaign_targets.each do |campaign_target|
      - target = campaign_target.target
      .center
        = link_to "Call #{target.name} from your computer", '#', class: 'btn', id: 'call-link',
          data: { behavior: 'callTrigger',
          auto_trigger: @auto_trigger,
          campaign_id: @campaign.id }
      .center= link_to "To connect with your cell phone, click here", "#"

      .campaign-target-info.light-background.hide-for-small
        - campaign_target = @campaign.campaign_targets.first
        %p= "Average Call Time: #{average_call_time_of(campaign_target)}"
        .social
          - share_url = organization_campaign_url(@organization, @campaign)
          = facebook_share_button(share_url)
          .center= tweet_button(share_url, @campaign.name)

      .reveal-modal#instruction
        .row
          .columns.center
            .instructions
              .step-1
                %h3 Please press "Allow" on your browser's microphone prompt and we'll kick off the call.
                %h3 Thanks!
              .step-2{hidden: 'hidden'}
                %h3 Don't know what to say?
                %h3 The clearest thing you can tell #{target.name} is:
                .script
                  %h2 "#{campaign_target.script}"
              = link_to "Hang Up", '#', class: 'hang-up-btn btn disabled',
                data: {behavior: 'hangUpTrigger displayNextAction'}
.row
  .columns.small-12.large-7.end
    %h3 by #{@organization.name}
    .campaign-description
      = @campaign.description
.row
  .columns.small-12
    - @campaign.campaign_targets.each do |campaign_target|
      - target = campaign_target.target
      .center.hide-for-small
        = link_to "Call #{target.name} from your computer", '#', class: 'btn', id: 'call-link',
          data: { behavior: 'callTrigger',
          auto_trigger: @auto_trigger,
          campaign_id: @campaign.id }
        .center= link_to "To connect with your cell phone, click here", "#"
      
    

  
