= content_for(:title, @campaign.name)
= content_for(:custom_head) do
  %meta{property: 'og:title', content: @campaign.name}
  %meta{property: 'og:description', content: @campaign.description}

.contain-to-grid.header
  %nav.top-bar{:data => {'topbar' => true}}
    .row
      .columns.large-7
        %h1.left= @campaign.name
.sticky.shadow
  - campaign_target = @campaign.campaign_targets.first
  = mobile_call_button(campaign_target, text: 'Call Now!')

.row
  .small-12.large-7.columns
    .image-bar
      = image_tag @picture.url, class: 'shadow'
    %h4 by #{@organization.name}
    .campaign-description= @campaign.description.html_safe
= render 'sidebar'

= render 'webrtc_instructions'
= render 'flash_instructions'
= render 'mobile_instructions'
