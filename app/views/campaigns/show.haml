= content_for(:custom_head) do
  %meta{property: 'og:title', content: @campaign.name}
  %meta{property: 'og:description', content: @campaign.description}

.contain-to-grid
  %nav.top-bar{:data => {'topbar' => true}}
    %h1.left= @campaign.name

.row
  .columns.small-12.large-7
    / %h1= @campaign.name
    .image-bar
      = image_tag "http://d22r54gnmuhwmk.cloudfront.net/photos/8/nh/oe/GuNhOegRdFMIQgq-556x313-noPad.jpg", class: "shadow"
    %h3 by #{@organization.name}
    .campaign-description
      = @campaign.description
    / .columns.small-12.large-5
    /   = render 'sidebar', campaign: @campaign, organization: @organization
  .cta-banner.shadow.columns.small-12.large-4.large-offset-1
    = image_tag "phone_icon_circles.png", class: "center-block"
    - @campaign.campaign_targets.each do |campaign_target|
      - target = campaign_target.target
      .in-browser-cta.hide-for-small
        .row.collapse
          .small-8.columns
            %p Call from your computer
          .small-4.columns
            = in_browser_call_button(campaign_target, auto_trigger: @auto_trigger)
      

      -# .mobile-cta.center= link_to "To connect with your cell phone, click here", "#"
      %p.center#or or
      .browser-to-mobile-cta
        .row.collapse
          = form_for [@campaign, @phone_call] do |call_form|
            .small-8.columns  
              %p Connect with your phone
              = call_form.text_field :from_number, placeholder: "Your Phone Number"
            .small-4.columns
              .button.postfix= call_form.submit "Connect"
      .campaign-target-info.hide-for-small
        %p.center
          = "Calls made: 5"
          %br
          = "Average Call Duration: #{average_call_time_of(campaign_target)}"
        .social.center
          - share_url = organization_campaign_url(@organization, @campaign)
          = facebook_share_button(share_url)
          = tweet_button(share_url, @campaign.name)

.reveal-modal#instruction
  - campaign_target = @campaign.campaign_targets.first
  - target = campaign_target.target
  .row
    .columns.center
      .instructions
        .step-1
          %h3 Please press "Allow" on your browser's microphone prompt and we'll kick off the call.
          %h3 Thanks!
        .step-2{hidden: 'hidden'}
          %h3 Don't know what to say?
          %h3 The clearest thing you can tell #{target.name} is:
          .script
            %h2 "#{campaign_target.script}"
        = link_to "Hang Up", '#', class: 'hang-up-btn btn disabled',
          data: {behavior: 'hangUpTrigger displayNextAction'}
