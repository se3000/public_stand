%head
  %meta{ :charset => "utf-8" }
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Public Stand"
  = content_for(:custom_head)

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

%body
  .fb-root
  %header
    - flash.each do |key, message|
      %div{ class: "flash #{key}" }
        .row= message

  = yield

  #footer.light-background.contain-to-grid
    %nav.top-bar
      %ul.title-area
        %li
          %h5 Powered by #{link_to 'Public Stand', root_path}
      %section.top-bar-section
        %ul.right
          %li.divider
          - if can? :manage, @campaign
            %li.divider
            %li= link_to 'Edit Campaign', edit_organization_campaign_path(@campaign.organization, @campaign)
            %li.divider
            %li= link_to 'Edit Image', edit_picture_path(@campaign.picture)
          %li
            - if logged_in?
              = link_to "Log Out", log_out_path
          %li.divider
  = javascript_include_tag "application"
